$defaultLeftCoordinates = 5rem
$defaultLeftMargin = 2rem
$footerLightTextColor = #515665

.page-footer
	height 80%
	max-height 600px
	+mobile()
		display none
	&_col
		position relative
	&_logo
		position absolute
		top 30%
		left $defaultLeftCoordinates
		transform translateY(-50%)
		path
			fill #FFF

	&:before
		margin-right 0
		transform translateX(-50%)
		right initial

	.news-form
		position absolute
		top 50%
		left $defaultLeftCoordinates
	.copyrights
		color: #FFF
		position absolute
		bottom 5rem
		left $defaultLeftCoordinates
	.footer-links
		position absolute
		top 60%
		transform translateY(-50%)
		left 2rem
		display flex
		align-item center
		width 100%

		&_text
			display flex
			flex-direction column
			justify-content center
			font-size 1rem
			color $footerLightTextColor

		&_container
			display flex
			width 80%
			align-item center
			> *
				flex-basis 8%
				margin-left 2rem
				svg
					width 100%
		&-bottom
			position absolute
			bottom $defaultLeftCoordinates
			left $defaultLeftMargin
			> a
				color $footerLightTextColor
				&:not(:first-child)
					margin-left 2rem
