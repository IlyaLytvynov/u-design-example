$defaultLeftCoordinates = 5rem
$defaultLeftMargin = 2rem
$footerLightTextColor = #515665

.page-footer
	height 80%
	max-height 600px
	min-height 400px
	&_col
		position relative
		+mobile()
			flex-basis 100%
	&_logo
		position absolute
		top 30%
		left $defaultLeftCoordinates
		transform translateY(-50%)
		+mobile()
			centerX()
		path
			fill #FFF

	&:before
		margin-right 0
		transform translateX(-50%)
		right initial
		+mobile()
			transform translateX(0)

	.news-form
		position absolute
		top 50%
		left $defaultLeftCoordinates
		&_head
			+mobile()
				text-align center
		+mobile()
			centerX()

	.copyrights
		color: #FFF
		position absolute
		bottom 5rem
		left $defaultLeftCoordinates
		+mobile()
			bottom -90%
			color #FFF
			centerX()

	.footer-links
		position absolute
		top 60%
		transform translateY(-50%)
		left 2rem
		display flex
		align-item center
		width 100%
		justify-content center
		+mobile()
			top 20%
			width auto
			centerX()
		&_text
			display flex
			flex-direction column
			justify-content center
			font-size 1rem
			color $footerLightTextColor
			+mobile()
				color #FFF

		&_container
			display flex
			width 80%
			align-item center
			> *
				flex-basis 8%
				margin-left 2rem
				svg
					width 100%
					> path
						+mobile()
							fill #FFF
		&-bottom
			position absolute
			bottom $defaultLeftCoordinates
			left $defaultLeftMargin
			+mobile()
				centerX()
			> a
				color $footerLightTextColor
				+mobile()
					color #FFF
				&:not(:first-child)
					margin-left 2rem
