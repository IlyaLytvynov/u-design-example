@require "variables.styl";
@require "mixins.styl";

$menuItemsPadding = 1rem;
$mobileMenuZIndex = 999;
$menuToggleBtnWidth = 3rem;
$mobile = 768px;

.page-header
	display flex
	padding-top 40px
	min-height 120px
	justify-content space-between
	+mobile()
		justify-content flex-start
		padding-top 0
		min-height 64px

.menu
	display flex
	justify-content flex-end
	align-items center
	&_control
		display none
		font-size 1.5rem
		transform translateY(-2px)
		height 100%
		width $menuToggleBtnWidth
		&-bar
			width 1.5rem
			height calc((1.5rem / 3) - 3px)
			margin-top 2px
			background $textColor
			transition all 0.7s
			&:first-child
				margin-top 2
		+mobile()
			position absolute
			left 0
			top 0
			z-index $mobileMenuZIndex+ 1
			display flex
			flex-direction column
			justify-content center
			align-items flex-end
	&_list
		flex 0 0 100%
		display flex
		align-items center
		justify-content center
		+mobile()
			transition transform 0.5s
			position fixed
			left 0
			top 0
			width 100vw
			height 100vh
			flex-direction column
			justify-content center
			z-index $mobileMenuZIndex
			background rgba(0, 0, 0, .92)
			transform translateX(-100%)
	&.opened
		.menu_list
			transform translateX(0)
		.menu_control
			color #FFF
		.menu_control-bar
			background #FFF
			&:first-child
				transform translateY(3px) rotateZ(45deg)
			&:nth-child(2)
				display none
			&:last-child
				transform translateY(-3px) rotateZ(-45deg)

	&_items
		display flex
		justify-content center
		align-items center
		+mobile()
			width 100%
		&:last-child
			> a
				padding-right 0
				+mobile()
					padding $menuItemsPadding
		> a
			padding $menuItemsPadding
			color $textColor
			+mobile()
				text-align center
				width 100%
				color #FFF

.logo-container
	flex 0 0 30%
	display flex
	flex-direction column
	justify-content center
	+mobile()
		flex-basis 20%
		margin-left $menuToggleBtnWidth + 0.8rem

.logo
	width 80px
	&_text-small
		padding-top 0.5rem
		font-size 1rem
		+mobile()
			display none
	> a
		color $textColor
	path
		fill $textColor

.logo-text-large > a
	display block
	height 18px

