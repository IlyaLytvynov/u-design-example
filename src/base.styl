@import "variables.styl";
@require "mixins.styl";
html
	font-family Arial, Helvetica, sans-serif
	height 100%
	min-height 100%
	font-size 14px

body
	height 100%
	min-height 100%
	margin 0
	padding 0
	color $textColor
	background-color $bodyBackground

a
	text-decoration none

h1, h2, h3, h4
	padding 0
	margin 0
	color $textColor

[class*="-container"] {
	box-sizing border-box
}

.page-wrapper
	width 100%;
	max-width 960px;
	min-height 100%
	height 100%
	margin 0 auto
	> *
		position relative

.image
	position relative
	font-size 0
	> img
		width 100%