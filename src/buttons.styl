$btnDefaultBGColor=#e6e6e6;

.btn
	width 100%
	min-width 190px
	cursor pointer
	text-align center
	color $textColor
	height 48px
	line-height 46px
	text-transform uppercase
	font-size 1rem
	position relative
	> span
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&-default
		background transparent
		border 1px solid $btnDefaultBGColor;
		font-weight 600
		&:before
			content ''
			width 100%
			background-color $btnDefaultBGColor
			position absolute
			top 0
			left 0
			height 0
			z-index 0
			transition height 0.7s
		&:hover::before
			height 100%

